<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.han.MyCalculator">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name="com.han.MyCalculator.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.han.MyCalculator.ResultsActivity"
            android:label="运算结果" />
        <activity

            android:name="com.han.MyCalculator.CapitalMoneyActivity"
            android:label="人民币写法"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.han.MyCalculator.BigDecimalActivity"
            android:label="大数运算"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.han.MyCalculator.BaseConversionActivity"
            android:label="进制转换"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.han.MyCalculator.PointsActivity"
            android:label="24点计算"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.han.MyCalculator.AboutActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>